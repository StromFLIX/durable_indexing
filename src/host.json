{
  "version": "2.0",
  "extensionBundle": {
    "id": "Microsoft.Azure.Functions.ExtensionBundle",
    "version": "[4.*, 5.0.0)"
  },
  "extensions": {
    "durableTask": {
      "hubName": "indexadillo-hub",
      "useGracefulShutdown": true,
      "storageProvider": {
        "type" : "Netherite",
        "PartitionCount": "12",  
        "StorageConnectionName": "TaskHubConnection",
        "EventHubsConnectionName": "EventHubsConnection"
      },
      "tracing": {
        "DistributedTracingEnabled": true,
        "Version": "V2"
      }
    }
  }
}